{
	"name": "lucas/asaas-php-sdk",
	"description": "Package to integratio Asaas",
	"keywords": [
		"php",
		"integratio",
		"asaas"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Lucas Tonolli",
			"email": "lucastonolli973@gmail.com"
		}
	],
	"require": {
		"php": "^8.2.0",
		"guzzlehttp/guzzle": "^7.9"
	},
	"require-dev": {
		"laravel/pint": "^1.24.0",
		"peckphp/peck": "^0.1.3",
		"pestphp/pest": "^4.1.0",
		"pestphp/pest-plugin-type-coverage": "^4.0",
		"phpstan/phpstan": "^2.1.26",
		"rector/rector": "^2.1.7",
		"symfony/var-dumper": "^7.3.3"
	},
	"autoload": {
		"psr-4": {
			"AsaasPhpSdk\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"preferred-install": "dist",
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"lint": "pint",
		"refactor": "rector",
		"test:type-coverage": "pest --type-coverage --exactly=100",
		"test:typos": "peck",
		"test:lint": "pint --test",
		"test:unit": "pest --coverage --exactly=100",
		"test:types": "phpstan",
		"test:refactor": "rector --dry-run",
		"test": [
			"@test:lint",
			"@test:type-coverage",
			"@test:typos",
			"@test:unit",
			"@test:types",
			"@test:refactor"
		]
	}
}
